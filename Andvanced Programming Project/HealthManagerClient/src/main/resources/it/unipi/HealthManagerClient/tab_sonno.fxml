         <contextMenu>
            <ContextMenu>
              <items>
                <MenuItem fx:id="MenuItemSonno" mnemonicParsing="false" onAction="#removeSonno" text="Elimina Selezionato" />
              </items>
            </ContextMenu>
         </contextMenu>
      </TableView>
      
      <!-- Styled Button -->
      <Button fx:id="TastoTabSonnoToHome" layoutX="230.0" layoutY="340.0" mnemonicParsing="false" onAction="#tabSonnoToHome" text="Torna alla Home" style="
            -fx-background-color: linear-gradient(from 0% 0% to 100% 100%, lightblue, deepskyblue);
            -fx-text-fill: white;
            -fx-font-size: 16px;
            -fx-font-weight: bold;
            -fx-background-radius: 20px;
            -fx-border-radius: 20px;
            -fx-padding: 10px 20px;
            -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.3), 5, 0.5, 0, 2);"/>
   </children>
</AnchorPane>
