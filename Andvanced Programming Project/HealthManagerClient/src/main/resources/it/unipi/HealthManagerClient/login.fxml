<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>

<VBox fx:id="vboxLogin" alignment="CENTER" prefHeight="627.0" prefWidth="504.0" spacing="20.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.unipi.HealthManagerClient.LoginController">
   <children>
      <!-- Title Text with blue shade -->
      <Text fx:id="TitoloLogin" strokeType="OUTSIDE" strokeWidth="0.0" text="Health Manager">
         <font>
            <Font name="System Bold" size="61.0" />
         </font>
         <style>
            -fx-fill: deepskyblue; /* Title in vibrant blue */
         </style>
      </Text>
      <Text fx:id="TestoLoginNegato" fill="RED" strokeType="OUTSIDE" strokeWidth="0.0" style="visibility: false;" text="Utente non registrato" />

      <!-- Username Label and TextField -->
      <Label text="Username">
         <style>
            -fx-text-fill: deepskyblue; /* Label in blue */
         </style>
         <font>
            <Font name="System Bold" size="17.0" />
         </font>
      </Label>
      <TextField fx:id="usr">
         <style>
            -fx-background-color: #f0f8ff; /* Light blue background for input */
            -fx-border-color: deepskyblue;
            -fx-border-radius: 10px;
            -fx-padding: 10px;
         </style>
      </TextField>

      <!-- Password Label and PasswordField -->
      <Label text="Password">
         <style>
            -fx-text-fill: deepskyblue; /* Label in blue */
         </style>
         <font>
            <Font name="System Bold" size="17.0" />
         </font>
      </Label>
      <PasswordField fx:id="pwd">
         <style>
            -fx-background-color: #f0f8ff; /* Light blue background for input */
            -fx-border-color: deepskyblue;
            -fx-border-radius: 10px;
            -fx-padding: 10px;
         </style>
      </PasswordField>
      <Text fx:id="TestoLoginPwNegato" fill="RED" layoutX="191.0" layoutY="148.0" strokeType="OUTSIDE" strokeWidth="0.0" style="visibility: false;" text="Password errata" />

      <!-- Login Button with a blue gradient -->
      <Button fx:id="TastoLogin" mnemonicParsing="false" onAction="#doLogin" text="Login">
         <style>
            -fx-background-color: linear-gradient(from 0% 0% to 100% 100%, lightblue, blue); /* Gradient from light blue to blue */
            -fx-text-fill: white;
            -fx-font-size: 14px;
            -fx-font-weight: bold;
            -fx-background-radius: 20px;
            -fx-border-radius: 20px;
            -fx-padding: 10px 20px;
         </style>
      </Button>

      <!-- Registration Link -->
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Non sei ancora iscritto? ">
         <style>
            -fx-fill: #555555; /* Dark grey for the text */
         </style>
      </Text>
      <Hyperlink fx:id="TastoRegistrati" onAction="#switchToReg" text="Registrati">
         <style>
            -fx-text-fill: deepskyblue; /* Blue color for the hyperlink */
         </style>
      </Hyperlink>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>

   <!-- Background for the whole VBox -->
   <style>
      -fx-background-color: #e0f7fa; /* Light blue background for the entire VBox */
   </style>
</VBox>
