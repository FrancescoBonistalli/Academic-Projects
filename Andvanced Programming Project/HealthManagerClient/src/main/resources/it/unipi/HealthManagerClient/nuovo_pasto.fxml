<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #E3F2FD;" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.unipi.HealthManagerClient.Nuovo_pastoController">
   <children>
      <!-- Title -->
      <Text fx:id="TitoloNuovoPasto" layoutX="100.0" layoutY="50.0" strokeType="OUTSIDE" strokeWidth="0.0" text="INSERIMENTO NUOVO PASTO" textAlignment="CENTER">
         <font>
            <Font name="Arial Bold" size="26.0" />
         </font>
         <style>
            -fx-fill: #1565C0;
         </style>
      </Text>
      
      <!-- Date Picker -->
      <Label layoutX="100.0" layoutY="120.0" style="-fx-text-fill: #1565C0; -fx-font-size: 14px;" text="Data:" />
      <DatePicker fx:id="DataNuovoPasto" layoutX="200.0" layoutY="115.0" style="-fx-control-inner-background: #BBDEFB; -fx-background-color: #64B5F6;" />
      
      <!-- Calorie Slider -->
      <Label layoutX="100.0" layoutY="170.0" style="-fx-text-fill: #1565C0; -fx-font-size: 14px;" text="Calorie (kcal):" />
      <Slider fx:id="SliderCalNuovoPasto" layoutX="200.0" layoutY="165.0" max="5000.0" min="1.0" showTickLabels="true" showTickMarks="true" style="-fx-control-inner-background: #BBDEFB;" />
      
      <!-- Tipo Text Field -->
      <Label layoutX="100.0" layoutY="220.0" style="-fx-text-fill: #1565C0; -fx-font-size: 14px;" text="Tipo:" />
      <TextField fx:id="TestoTipoNuovoPasto" layoutX="200.0" layoutY="215.0" style="-fx-background-color: #E1F5FE; -fx-border-color: #1565C0; -fx-border-radius: 4px;" />
      
      <!-- Insert Button -->
      <Button fx:id="TastoNuovoPasto" layoutX="260.0" layoutY="300.0" mnemonicParsing="false" onAction="#insNuovoPasto" style="-fx-background-color: #42A5F5; -fx-text-fill: white; -fx-font-weight: bold;" text="Inserisci" />
      
      <!-- Back Button -->
      <Button fx:id="TastoNuovoPastoIndietro" layoutX="50.0" layoutY="300.0" mnemonicParsing="false" onAction="#nuovoPastoToHome" style="-fx-background-color: #90CAF9; -fx-text-fill: #0D47A1; -fx-font-weight: bold;" text="Indietro" />
      <Text fx:id="TestoErrPasto" fill="RED" layoutX="228.0" layoutY="88.0" strokeType="OUTSIDE" strokeWidth="0.0" style="visibility: false;" text="Inserire tutti i campi" textAlignment="CENTER">
         <font>
            <Font size="14.0" />
         </font>
      </Text>
   </children>
</AnchorPane>
